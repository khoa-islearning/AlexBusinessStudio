@page "/cart"
@layout AdminLayout
@using Radzen

 @code {
       private bool IsShow   {get;set;} = false;
       private void Show()
       {
           IsShow =   !IsShow;
       }

       private bool IsShowTwo  {get;set;} = false;
       private void ShowTwo()
       {
           IsShowTwo =   !IsShowTwo;
       }

 } 

    <section>
      <div style="background-color: #333; overflow: hidden; padding: 3px; width:67%;">
        <!--- all links for nav bar-->
        <a href="/landing" style="font-size: 24px;  display: flex; color: white; text-align: center; float:left; padding-left: 20px;padding-right: 20px; padding-top: 5px; padding-bottom: 5px;" >Home</a>
    <a href="/cart" style="font-size: 24px;  display: flex; color: white; text-align: center; float:left; padding-left: 20px;padding-right: 20px; padding-top: 5px; padding-bottom: 5px;">Cart</a>
    <a href="/Gallery" style="font-size: 24px;  display: flex; color: white; text-align: center; float:left; padding-left: 20px;padding-right: 20px; padding-top: 5px; padding-bottom: 5px;">Gallery</a>
    <a style="font-size: 24px;  display: flex; color: white; text-align: center; float:left; padding-left: 20px;padding-right: 20px; padding-top: 5px; padding-bottom: 5px;">Contact Me</a>
      </div>
      </section>

    <hr style="width:67%;">
    <h1 style="text-align:center; width:1400px" >
      MY CART
    </h1>
    <hr style="width:67%;">

    <div style="width:100%">
      <div style="width:80%">
        <div style="display: grid;
        grid-gap: 10px;
        grid-template-columns: 1fr 1fr 0.01fr 1fr;
        grid-template-rows: 0.1fr 0.1fr 1fr 1fr;
        grid-template-areas: 
                'a b z d '
                'e e z k '
                'f g z i'
                'o o z i'; ">
                <div style="grid-area:a;" hidden="@IsShow">
                  <img src="MaineCoon3.png" asp-append-version="true" width="300px" />
                </div>
                <div style="grid-area:b; " hidden="@IsShow">
                  <div style="border: 5px solid #333; margin-bottom: 10px; padding-left: 10px; font-size: 120%;">
                  <p>Majestic Cat</p><br>
                  <p>Format: PNG</p><br>
                  <p>Price: $29.99</p><br>
                  </div>
                  
                  <button @onclick="@Show">Delete From Cart</button>
                  
                </div>
                <div style="grid-area:c; width:100px">
                  
                </div>
                <div style="grid-area:d; width:300px; border: 5px solid #333;">
                  <p>Please Note: </p><br>
                  <p>Pictures are non-refundable and not distributable under any circumstances except through the permission of the author</p><br>
                </div>

                <div style="grid-area:e; height:2px; width: 100%; background-color: black;" hidden="@IsShow">
                </div>
                <div style="grid-area:k; height:2px; width: 70%; background-color: black;">
                </div>
                <div style="grid-area:o; height:2px; width: 100%; background-color: black;" hidden="@IsShowTwo">
                </div>
                <div style="grid-area:z; height: 68%; width: 2px; background-color: black;">
                </div>

                  <div style="grid-area:f;" hidden="@IsShowTwo">
                    <img src="MaineCoon1.png" asp-append-version="true" width="300px" />
                  </div>

                  <div style="grid-area:g; " hidden="@IsShowTwo">
                    <div style="border: 5px solid #333; margin-bottom: 10px; padding-left: 10px; font-size: 120%;">
                      <p>Nonchalant Cat</p><br>
                      <p>Format: PNG</p><br>
                      <p>Price: $14.99</p><br>
                      </div>
                      
                      <button @onclick="@ShowTwo">Delete From Cart</button>
                    
                  </div>
                  
                  <div style=" grid-area:i; display: flex; flex-direction: column; justify-content: left; align-items: flex-start; padding-left: 20px;">
                    <h2 style="text-align:center">PROCEED TO CHECKOUT</h2>
                    <br>
                    <p style="text-align:center">Total</p>
                    @if (IsShow == false && IsShowTwo == false){
                      <textarea>$44.98</textarea>
                    }
                    @if (IsShow == false && IsShowTwo == true){
                      <textarea>$29.99</textarea>
                    }
                    @if (IsShow == true && IsShowTwo == false){
                      <textarea>$14.99</textarea>
                    }
                    @if (IsShow == true && IsShowTwo == true){
                      <textarea>$0.00</textarea>
                    }
                    
                    <br>
                    <br>
                    <br>
                    <br>
                    <button style="height: 100px; width: 300px;">PAY NOW</button>
                  </div>

        </div>
      </div>
    </div>
    <hr style="width: 67%;">

