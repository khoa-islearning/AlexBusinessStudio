<div class="tableFixHead">
    <table>
        <thead>
            <tr>
                <th>Categories</th>
                <th>Count</th>
                <th>Changes</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var k in categories)
            {
                <tr>
                    <td>@k.Name</td>
                    <td>@k.Value</td>
                    @if(@k.Change > 0)
                    {
                        <td style = "color:green"> &uarr; @k.Change</td>   
                    }else{
                        <td style = "color:red"> &darr; @k.Change</td>   
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@code{

    class Model
    {
        public string Name;
        public int Value;
        public int Change;
    }

    Model[] categories = new Model[]
    {
        new Model {Name = "Cat", Value = 3000, Change = 17},
        new Model {Name = "Dog", Value = 2000, Change = -5},
        new Model {Name = "Street", Value = 1000, Change = -50},
        new Model {Name = "Bird", Value = 932, Change = 26},
        new Model {Name = "Party", Value = 815, Change = -11},
        new Model {Name = "City", Value = 750, Change = -20},
        new Model {Name = "Weeding", Value = 700, Change = 45},
    };


}